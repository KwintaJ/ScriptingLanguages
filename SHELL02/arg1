#!/bin/bash 
# Jan Kwinta
#
# 16.10.2025
#
# Problem SHELL02
# Program 1
set -e

# wypisanie 
while getopts "abcdeq" flag; do
    case ${flag} in
        a) echo "-a present"
        ;;
        b) echo "-b present"
        ;;
        c) echo "-c present"
        ;;
        d) echo "-d present"
        ;;
        e) echo "-e present"
        ;;
        q) echo "Unsupported option: -q"
        ;;
    esac
done

# wypisanie argumentow
if (( "$#" < 1 )) ; then
    shift $(($OPTIND - 1))
    echo "Arguments are: $*"
fi

